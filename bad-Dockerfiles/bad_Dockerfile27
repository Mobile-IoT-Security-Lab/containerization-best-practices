FROM ubuntu:20.04

RUN apt-get update

# Create a new user named 'privilegeduser' and add it to the sudo group
RUN useradd -m privilegeduser && echo "privilegeduser:password" | chpasswd && adduser privilegeduser sudo

# Allow 'privilegeduser' to run any command with sudo without a password
RUN echo "privilegeduser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Switch to the new user
USER privilegeduser

# Start a shell as the new user
CMD [ "bash" ]
