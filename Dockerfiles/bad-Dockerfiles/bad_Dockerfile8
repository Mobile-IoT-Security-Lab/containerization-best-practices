### --- BAD Practice 8: Dockerfile with multiple instructions in a single line --- ###

# Use a base image with unnecessary packages
FROM ubuntu:latest

# Update package lists, install dependencies, and clean up
RUN apt-get update && apt-get install -y \
    package1 \
    package2 \
    package3 \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Set environment variables
ENV ENV_VAR1=value1 ENV_VAR2=value2

# Copy application files
COPY . /app

# Set working directory and start application
WORKDIR /app
CMD ["./start.sh"]
